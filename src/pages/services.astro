---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

// Import necessary images
import desarrollo1 from "@images/desarrollo1.avif";
import desarrollo2 from "@images/desarrollo2.avif";
import empresa1 from "@images/empresa1.avif";
import empresa2 from "@images/empresa2.avif";
import servidores from "@images/servidores.avif";
import soporte_tecnico from "@images/soporte-tecnico.avif";
import impresora1 from "@images/impresora1.avif";
import impresora2 from "@images/impresora2.avif";
import { SITE } from "@data/constants";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "Desarrollo de Software a Medida",
    subTitle:
      "Creamos soluciones digitales personalizadas para tu empresa, desde aplicaciones web hasta sistemas internos. Nuestro equipo de expertos te acompaña en todo el proceso, garantizando funcionalidad, escalabilidad y seguridad.",
    single: false,
    imgOne: desarrollo1,
    imgOneAlt: "Pantalla con planos de software y arquitectura digital.",
    imgTwo: desarrollo2,
    imgTwoAlt: "Desarrollador trabajando en código en la oficina",
  },
  {
    isRightSection: false,
    title: "Servicios de Hosting y Dominio",
    subTitle:
      "Ofrecemos alojamiento web confiable, rápido y seguro para tu página o aplicación. Incluye registro de dominio, certificados SSL y soporte técnico especializado para que tu negocio esté siempre disponible en internet.",
    img: servidores,
    imgAlt: "Vista aérea de servidores y centros de datos",
    btnExists: true,
    btnTitle: "Ver planes de hosting",
    btnURL: "#",
  },
  {
    isRightSection: true,
    title: "Venta y Mantenimiento de Impresoras",
    subTitle:
      "Contamos con impresoras de las mejores marcas para tu oficina o negocio. Además, ofrecemos servicio técnico, instalación, reparación y mantenimiento preventivo para asegurar el funcionamiento óptimo de tus equipos.",
    single: false,
    imgOne: impresora1,
    imgOneAlt: "Técnico revisando impresora en empresa",
    imgTwo: impresora2,
    imgTwoAlt: "Impresora en proceso de mantenimiento",
    btnExists: true,
    btnTitle: "Solicitar servicio",
    btnURL: "#",
  },
  {
    isRightSection: false,
    title: "Consultoría y Soporte Técnico",
    subTitle:
      "Te asesoramos en la transformación digital de tu empresa, optimización de procesos y selección de tecnología. Nuestro soporte técnico está disponible para resolver cualquier incidencia de software, hosting o impresoras.",
    img: soporte_tecnico,
    imgAlt:
      "Especialista brindando soporte técnico a cliente empresarial",
  },
  {
    isRightSection: true,
    title: "Soluciones Empresariales Integrales",
    subTitle:
      "Integramos todos nuestros servicios para empresas que buscan digitalizarse, mejorar su infraestructura tecnológica y mantener sus equipos funcionando al máximo nivel. Adaptamos nuestras soluciones a tus necesidades específicas.",
    single: false,
    imgOne: empresa1,
    imgOneAlt: "Comparación de procesos antes y después de la digitalización",
    imgTwo: empresa2,
    imgTwoAlt: "Equipo colaborando en proyecto de software",
    btnExists: true,
    btnTitle: "Contactar asesor",
    btnURL: "#",
  },
];

const pageTitle: string = `Servicios | ${SITE.title}`;
const metaDescription =
  "Compusoft ofrece desarrollo de software, hosting profesional, venta y mantenimiento de impresoras, y consultoría tecnológica para empresas. Soluciones integrales para tu transformación digital.";
const ogTitle = "Servicios de Software, Hosting e Impresoras | Compusoft";
---

<MainLayout
  title={pageTitle}
  customDescription={metaDescription}
  customOgTitle={ogTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://compusoft.uk/services",
    url: "https://compusoft.uk/services",
    name: "Servicios de Consultoría Experta | Compusoft",
    description:
      "Uniendo experiencia con su visión, Compusoft ofrece un servicio excepcional y soluciones integrales en la industria de ferretería y construcción, desde la consulta hasta la finalización del proyecto.",
    isPartOf: {
      "@type": "WebSite",
      url: "https://screwfast.uk",
      name: "ScrewFast",
      description:
        "ScrewFast offers top-tier hardware tools and expert construction services to meet all your project needs.",
    },
    inLanguage: "en-US",
  }}
>
  {/* MainSection is the introductory section of the page, it also contains a CTA button */}
  <MainSection
    title="Soluciones digitales y tecnológicas para tu empresa"
    subTitle="En Compusoft, desarrollamos software a medida, ofrecemos servicios de hosting, venta y mantenimiento de impresoras, y consultoría tecnológica. Nuestro equipo te acompaña en cada etapa para que tu negocio crezca y se mantenga competitivo."
    btnExists={true}
    btnTitle="Solicitar asesoría"
    btnURL="#"
  />
  {/* RightSection and LeftSection contain details about various services along with pertinent imagery.
  They alternate for variety in design.
  The 'btnExists' property is used to toggle the display of a button in these sections.
  When btnExists={true}, a button is displayed.
  This can be used to link to more detailed information or related resources.
  RightSection can also conditionally render one or two images based on the 'single' property.
  If 'single' is true, it displays one image, otherwise it displays two.
  */}
  {
    articles.map((article) => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  {/* FeaturesStats section showcases essential stats valuable to users */}
  <FeaturesStats
    title="Nuestros resultados"
    subTitle="La satisfacción y el crecimiento de nuestros clientes es nuestro mayor logro. Compusoft se compromete a brindar servicios tecnológicos confiables y de alta calidad."
    mainStatTitle="98%"
    mainStatSubTitle="de nuestros clientes recomiendan Compusoft por su atención y resultados"
    stats={[
      {
        stat: "99.9%",
        description: "uptime garantizado en hosting",
      },
      {
        stat: "1,200+",
        description: "impresoras instaladas y mantenidas",
      },
      {
        stat: "90%",
        description: "clientes con mejoras en procesos digitales",
      },
    ]}
  />
</MainLayout>
